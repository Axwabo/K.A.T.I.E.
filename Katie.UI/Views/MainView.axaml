<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Katie.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Katie.UI.Views.MainView"
             x:DataType="viewModels:MainViewModel">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>
    <Grid Margin="5" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5" IsEnabled="{Binding !NavigationBlocked}">
            <Button Command="{Binding NavigateCommand}" CommandParameter="Phrases">Phrases</Button>
            <Button Command="{Binding NavigateCommand}" CommandParameter="Shit">Shit</Button>
        </StackPanel>
        <UserControl Grid.Row="1" Content="{Binding Phrases}" Margin="5" IsVisible="{Binding PhrasesVisible}" />
        <UserControl Grid.Row="1" Content="{Binding Shit}" Margin="5" IsVisible="{Binding ShitVisible}" />
    </Grid>
</UserControl>
