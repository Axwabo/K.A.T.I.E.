<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Katie.UI.ViewModels"
             xmlns:controls="clr-namespace:Katie.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Katie.UI.Views.MainView"
             x:DataType="viewModels:MainViewModel">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>
    <Grid Margin="5" RowDefinitions="Auto,*">
        <controls:NavigationBar HorizontalAlignment="Center" IsEnabled="{Binding !NavigationBlocked}"
                                Pages="{Binding Pages}" CurrentPage="{Binding Page, Mode=TwoWay}" />
        <Panel Grid.Row="1">
            <UserControl Content="{Binding Phrases}" Margin="5" IsVisible="{Binding PhrasesVisible}" />
            <UserControl Content="{Binding Cache}" Margin="5" IsVisible="{Binding CacheVisible}" />
        </Panel>
    </Grid>
</UserControl>
