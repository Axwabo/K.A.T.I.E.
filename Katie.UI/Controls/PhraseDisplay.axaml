<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:phrases="clr-namespace:Katie.NAudio.Phrases;assembly=Katie.NAudio"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Katie.UI.Controls.PhraseDisplay"
             x:DataType="phrases:WavePhraseBase"
             x:Name="Root">
    <Grid ColumnDefinitions="*,Auto,Auto,Auto" Background="{Binding Converter={StaticResource PhraseToBrush}}">
        <Label x:Name="Label" Content="{Binding Text}" ToolTip.Tip="{Binding Text}" />
        <TextBox Grid.Column="0" x:Name="Input" Padding="2" IsVisible="False" Watermark="{Binding Text}" />
        <Button Grid.Column="1" x:Name="Chain" ToolTip.Tip="Go To Original" Padding="2" IsVisible="False" Click="ChainClicked">🔗</Button>
        <Button Grid.Column="2" x:Name="Edit" ToolTip.Tip="Edit Text" Padding="2" Click="EditClicked">✏</Button>
        <Button Grid.Column="3" ToolTip.Tip="Delete" Padding="2" Command="{Binding #Root.Pack.RemoveCommand}" CommandParameter="{Binding}">❌</Button>
    </Grid>
</UserControl>
